<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/window"
    android:layout_gravity="center"
    android:padding="15dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting to device"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/progressbar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Searching device ..."
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/progressbar"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_screen_share_24"
        app:layout_constraintLeft_toLeftOf="@id/progressbar"
        app:layout_constraintTop_toBottomOf="@id/progressbar" />

    <TextView
        android:id="@+id/share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="25dp"
        android:text="Manual connect"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/progressbar" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_info_24"
        app:layout_constraintLeft_toLeftOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/share" />

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="25dp"
        android:text="More info"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/info"
        app:layout_constraintTop_toBottomOf="@id/share" />
</androidx.constraintlayout.widget.ConstraintLayout>